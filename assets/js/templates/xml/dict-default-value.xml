<% /*The EJS in this file is so confusingly condensed to assist the look of the XML that is rendered (no unnecessary new lines, white spaces, etc) */  if(!model.snippetModel.get("fields").dataType.includes("Array") && model.get("value") != "" || model.snippetModel.get("fields").dataType.includes("Array") && model.collection.models.length > 0) { %>
			<defaultValue><% if(model.snippetModel.get("fields").dataType.includes("Array")) { model.collection.each(function(element) { if(element.type == "User Variable") { %>
				<userVariable value="<%= _.findWhere(element.emmVariables.user, {label: element.get("value")}).key %>" /><% } else if (element.type == "Device Variable") { %>
				<deviceVariable value="<%= _.findWhere(element.emmVariables.device, {label: element.get("value")}).key %>" /><% } else {%>
				<value><%- element.get("value") %></value><% }})} else { %>
				<value><%- model.get("value") %></value><% }%>
			</defaultValue><% } %>